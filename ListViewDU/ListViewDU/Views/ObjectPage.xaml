<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewDU.Views.ObjectPage" Title="Edit item">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Name" HorizontalOptions="CenterAndExpand" x:Name="nameTxt"></Entry>
            <Entry Placeholder="Age" HorizontalOptions="CenterAndExpand" x:Name="ageTxt"></Entry>
            <Picker Title="Typ" HorizontalOptions="CenterAndExpand" x:Name="typeObject"></Picker>

            <Button Text="Odeslat" VerticalOptions="End" x:Name="Submit" Clicked="Submit_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>